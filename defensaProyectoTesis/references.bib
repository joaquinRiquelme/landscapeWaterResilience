	journal = {Hydrological Processes},
	author = {Perron, Nia and Baltzer, Jennifer L. and Sonnentag, Oliver},
	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/hyp.14815},
	keywords = {soil moisture, boreal forest, evapotranspiration, permafrost, sap flow, transpiration, wetland},
