@phdthesis{nguyen_augmenting_2019,
	address = {United States -- South Dakota},
	type = {Ph.{D}.},
	title = {Augmenting {Land} {Cover}/{Land} {Use} {Classification} by {Incorporating} {Information} from {Land} {Surface} {Phenology}: {An} {Application} to {Quantify} {Recent} {Cropland} {Expansion} in {South} {Dakota}},
