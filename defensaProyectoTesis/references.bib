@article{munoz_aguayo_redefinicion_2014,
	title = {Redefinición de la clasificación red hidrográfica a nivel nacional.},
	url = {https://bibliotecadigital.ciren.cl/handle/20.500.13082/26406},
	abstract = {La Dirección General de Aguas es la institución a la que por ley, y de acuerdo a lo establecido en el Código de Aguas, le corresponde llevar un Catastro Público de Aguas, en el que constará toda la información que tenga relación con ellas, el que debe estar constituido por los archivos, registro e inventarios establecidos por Reglamento y entre los cuales destaca el Inventario Público de cuencas Hidrográficas y Lagos. En esta materia, se disponía, hasta ahora, de una clasificación de cuencas proveniente de estudios que datan del año 1978. Esta presentaba un sinnúmero de problemas técnicos y administrativos, que afectaban la administración de la información a nivel de cuencas, presentando de limitaciones sin un criterio estrictamente de jerarquía hídrica. El desarrollo económico nacional en las últimas décadas ha significado gran presión sobre el uso y la disponibilidad de los recursos hídricos que escurren por las cuencas, haciendo más complejos los análisis requeridos para generar balances y establecer disponibilidades, por lo que se requiere de organización y precisión de la información de base. Consecuentemente, la información de las unidades de análisis, en este caso las cuencas, requieren un cambio que permita incorporar mejoras en el acopio, sistematización, análisis y tratamiento de la información de recursos hídricos del país, lo que se traduce en la necesidad de una nueva arquitectura de la información, basada en una clasificación de cuencas adecuada al tratamiento de información cartográfica digital. Asumiendo este desafío, la Dirección General de Aguas estableció la necesidad de redefinir las cuencas hidrográficas de Chile, actualizando, mejorando y modernizando las fuentes de información gráfica y alfanumérica existentes, mediante el uso de tecnologías de avanzada en materia de generación y manejo de información. La modernización de esta clasificación de cuencas hidrográficas no fue fácil y significó un intenso análisis multidisciplinario compuesto por expertos en diversas áreas relacionadas, para configurar un sistema de clasificación que considera la irregular fisiografía, configurando situaciones muy diversas en el escurrimiento de las aguas y organización de las cuencas. En este marco, la cartografía que se presenta entrega una nueva clasificación de cuencas hidrográficas, realizada con abundante información geográfica y técnicas geomáticas basada en una jerarquización con criterios hídricos.},
	language = {es},
	urldate = {2025-06-27},
