	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Yang, Chenyi and Ma, Yaoming and Yuan, Yuan},
	year = {2021},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2021JD035011},
	keywords = {evaporative fraction, land heterogeneous components, land-atmosphere interactions, Tibetan Plateau, water-energy interactions},
	pages = {e2021JD035011},
	annote = {e2021JD035011 2021JD035011},
	annote = {e2021JD035011 2021JD035011},
