	journal = {Remote Sensing of Environment},
	author = {Nguyen, Lan H. and Joshi, Deepak R. and Clay, David E. and Henebry, Geoffrey M.},
	month = mar,
	year = {2020},
	keywords = {Land surface phenology, Croplands, Grasslands, Land cover/land use, Random forest classifier, South Dakota},
